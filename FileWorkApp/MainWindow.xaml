<Window x:Class="FileWorkApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileWorkApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="800" MinHeight="450">
    <Grid>
        <TextBox x:Name="textBox" Margin="10,10,10,90" TextWrapping="Wrap" RenderTransformOrigin="0,0" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="button" Content="Открыть файл" Margin="158,0,0,28" FontSize="20" HorizontalAlignment="Left" Width="160" Height="29" VerticalAlignment="Bottom" Click="OpenFile"/>
        <Button x:Name="button1" Content="Сохранить файл" Margin="0,0,154,28" FontSize="20" HorizontalAlignment="Right" Width="160" Height="31" VerticalAlignment="Bottom" Click="SaveFile"/>
    </Grid>
</Window>
